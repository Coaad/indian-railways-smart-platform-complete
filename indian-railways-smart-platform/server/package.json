{
  "name": "indian-railways-server",
  "version": "1.0.0",
  "description": "Advanced backend server for Indian Railways Smart Platform - Built with passion and attention to detail",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "seed": "node utils/seedData.js",
    "build": "echo 'Building server...' && npm test",
    "lint": "eslint . --ext .js --fix",
    "security:audit": "npm audit && echo 'Security audit complete'",
    "logs": "tail -f logs/combined.log",
    "db:backup": "node utils/backup.js",
    "deploy": "echo 'Deploying to production...' && npm run build"
  },
  "keywords": [
    "indian-railways",
    "smart-ticketing",
    "crowd-monitoring",
    "mern-stack",
    "security-first",
    "real-time",
    "accessibility",
    "ai-powered"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://your-portfolio.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "qrcode": "^1.5.3",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.2",
    "redis": "^4.6.8",
    "nodemailer": "^6.9.4",
    "twilio": "^4.15.0",
    "crypto": "^1.0.1",
    "compression": "^1.7.4",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "express-slow-down": "^1.6.0",
    "dotenv": "^16.3.1",
    "swagger-ui-express": "^5.0.0",
    "express-fileupload": "^1.4.0",
    "sharp": "^0.32.5",
    "bull": "^4.11.3",
    "firebase-admin": "^11.10.1",
    "speakeasy": "^2.0.0",
    "geolib": "^3.3.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**"
    ]
  }
}